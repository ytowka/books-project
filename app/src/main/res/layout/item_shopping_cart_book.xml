<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivBook"
        android:layout_width="175dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/image_book_test"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        tools:text="Письма к брату Тео"
        />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="Ван Гог Винсент"
        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintTop_toBottomOf="@id/tvAuthor"
        tools:text="240 руб."
        />

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBook"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:background="@drawable/bg_btn_left"
            android:drawableLeft="@drawable/ic_minus"
            android:paddingStart="14dp"
            tools:backgroundTint="@color/colorLightGray"
            tools:drawableTint="@color/black"
            />

        <TextView
            android:id="@+id/tvCounter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="39dp"
            android:background="@drawable/bg_tv_counter"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:textColor="@color/black"
            tools:text="1"
            tools:backgroundTint="@color/colorLightGray"
            />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_btn_right"
            android:drawableRight="@drawable/ic_plus"
            android:paddingEnd="14dp"
            tools:backgroundTint="@color/colorLightGray"
            tools:drawableTint="@color/black"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

